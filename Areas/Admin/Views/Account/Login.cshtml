@model NguyenPhanHuy_2122110062.Models.LoginAdminViewModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Areas/Admin/Views/shared/_LayoutLogin.cshtml";
}

<p class="login-box-msg">Sign in to start your session</p>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="mb-3">
        <div class="input-group">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control d-block", @placeholder = "Tên đăng nhập" })
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>
        @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text-danger d-block" })
    </div>
    <div class="mb-3">
        <div class="input-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control d-block", @placeholder = "Nhập mật khẩu" })
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
        @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger d-block" })
    </div>
    <div class="row">
        <div class="col-8">
            <div class="icheck-primary">
                @*<input type="checkbox" id="remember">*@
                @Html.CheckBoxFor(m => m.RememberMe)
                <label for="remember">
                    Remember Me
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </div>
        <!-- /.col -->
    </div>
}

<p class="mb-1">
    <a href="#">I forgot my password</a>
</p>

