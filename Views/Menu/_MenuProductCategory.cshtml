        @foreach (var item in Model)
        {
            <a class="dropdown-item" href="@Url.Action("Detail", "Product", new { alias = item.Alias, id = item.Id })">@item.Title</a>
        }
        <a class="dropdown-item" href="@Url.Action("Index", "Category", new {})">Tất cả</a>
    </div>
}
