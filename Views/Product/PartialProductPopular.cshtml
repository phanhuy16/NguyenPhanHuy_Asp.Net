@model IEnumerable<NguyenPhanHuy_2122110062.Models.Context.Product>

@if (Model != null && Model.Any())
{
    <div class="col-md d-none d-lg-block flex-grow-1">
        <aside class="special-home-right">
            <h6 class="bg-blue text-center text-white mb-0 p-2">Popular category</h6>

            @foreach (var item in Model)
            {
                var strImages = "";
                var image = item.ProductImage.FirstOrDefault(x => x.IsDefault);
                if (image != null)
                {
                    strImages = image.Image;
                }
                <div class="card-banner border-bottom">
                    <div class="py-3" style="width:80%">
                        <h6 class="card-title">@item.Title</h6>
                        <a href="@Url.Action("Detail", "Product", new {alias=item.Alias,id=item.Id})" class="btn btn-secondary btn-sm"> Source now </a>
                    </div>
                    <img src="@strImages" height="80" class="img-bg">
                </div>
            }
        </aside>
    </div> <!-- col.// -->
}